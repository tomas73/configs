[alias]
  ttree = log --graph --pretty=format:'%Cgreen%h%Creset %Cred%cd%Creset %d %s' --abbrev-commit --all --decorate --date=short
  tree = log --graph --pretty=oneline --abbrev-commit --all --decorate --date=short
  stree = log --graph --pretty=oneline --abbrev-commit --decorate
  last = log -1 HEAD
  wi = log --merges --pretty=format:'%Cred%h%Creset - %cI %<(25,trunc)%s %Cred%<(17,trunc)%b%Creset %d'
  lg = log --pretty=format:'%Cred%h%Creset - %<(10,trunc)%cr %<(35,trunc)%s %Cblue%<(20,trunc)%an%Creset%d'

